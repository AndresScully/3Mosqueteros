//Programa que calcula si un n√∫mero es primo o no es primo
#include <iostream>
using namespace std;
int cont=0;
int num, residuo;
int i;
int main()
{
	cout<<"Ingrese un numero:";
	cin>>num;
	while (num!=0)
	{
		i=0;
		residuo=0;
		cont=0;
		for (i=1; i<=num;i++)
		{
			residuo=num%i;
			if (residuo==0)
			{
				cont=cont+1;
			}
		}
		if (cont==2)
		{
			cout<<num<<" Es primo";
		}
		else
		{
			cout<<num<<" No es primo";		
		}
		cout<<"\n\nIngrese un numero:";
		cin>>num;
	}
}
